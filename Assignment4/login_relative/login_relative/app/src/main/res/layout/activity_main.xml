<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFE7FE"
    android:padding="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:textColor="@color/dark_violet"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_title"
        android:layout_margin="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="15sp"
        android:id="@+id/tv_username"
        android:layout_below="@+id/tv_title"
        android:textColor="@color/dark_violet"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:autofillHints="username"
        android:backgroundTint="@color/dark_violet"
        android:hint="@string/username_hint"
        android:inputType="text"
        android:textColorHint="@color/light_violet"
        android:textColor="#A98BAF"
        android:layout_toEndOf="@+id/tv_username"
        android:layout_alignBaseline="@+id/tv_username"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="15sp"
        android:id="@+id/tv_password"
        android:layout_below="@+id/tv_username"
        android:textColor="@color/dark_violet"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:autofillHints="password"
        android:backgroundTint="@color/dark_violet"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:textColorHint="#A98BAF"
        android:textColor="#A98BAF"
        android:layout_toEndOf="@+id/tv_password"
        android:layout_alignBaseline="@id/tv_password"
        android:layout_alignStart="@+id/et_username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:onClick="onClick"
        android:text="@string/forgot_password"
        android:textSize="11sp"
        android:id="@+id/tv_forgot_password"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_password"
        android:textColor="@color/dark_violet"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_violet"
        android:text="@string/login"
        android:textColor="#efe3fd"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_forgot_password"
        android:layout_marginTop="50dp"/>

</RelativeLayout>